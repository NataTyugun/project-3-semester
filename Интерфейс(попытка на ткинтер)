from tkinter import *
from PIL import ImageTk, Image
import os
from tkinter import ttk
from tkinter.ttk import Radiobutton
from tkinter.ttk import Combobox
from tkinter import messagebox

window = Tk()
window.title('Weather&Clothing')
window.geometry("600x1200")
window['bg'] = 'lightskyblue1'

label = Label(text="Enter your personal data", bg="lightskyblue1")
label.pack(pady=5)

my_city = StringVar()
my_weight = StringVar()
my_age = IntVar()
my_gender = IntVar()
my_activiti = StringVar()
ckal = IntVar()

f_1 = Frame(window)
f_2 = Frame(window)
f_3 = Frame(window)
f_4 = Frame(window)
f_5 = Frame(window)
f_6 = Frame(window)

city_label = Label(f_1, text="City ", bg="lightskyblue1")
city_entry = Entry(f_1, width=20, textvariable=my_city)

weight_label = Label(f_2, text="Date ", bg="lightskyblue1")
weight_entry = Entry(f_2, width=20, textvariable=my_weight)

time_label = Label(f_3, text="Time of day", bg="lightskyblue1")
time_entry = Entry(f_3, width=20, textvariable=my_city)

age_label = Label(f_4, text="Age ", bg="lightskyblue1")
age_entry = Entry(f_4, width=8, textvariable=my_age)

gender_label = Label(f_5, text="Gender ", bg="lightskyblue1")
rad1 = Radiobutton(f_5, text='М', value=4, variable=my_gender)
rad2 = Radiobutton(f_5, text='W', value=-161, variable=my_gender)

activiti_label = Label(f_6, text="Activity ", bg="lightskyblue1")
activiti = Combobox(f_6, textvariable=my_activiti, width=48,
                    values=["A long walk on the street",
                            "Outdoor sports",
                            "Daily routine"])
f_1.pack(pady=5)
f_2.pack(pady=5)
f_3.pack(pady=5)
f_4.pack(pady=5)
f_5.pack(pady=5)
f_6.pack(pady=5)

city_label.pack(side=LEFT)
weight_label.pack(side=LEFT)
time_label.pack(side=LEFT)
age_label.pack(side=LEFT)
gender_label.pack(side=LEFT)
activiti_label.pack(side=LEFT)

city_entry.pack(side=LEFT)
weight_entry.pack(side=LEFT)
city_entry.pack(side=LEFT)
time_entry.pack(side=LEFT)
age_entry.pack(side=LEFT)
rad1.pack(side=LEFT)
rad2.pack(side=LEFT)
activiti.pack(side=LEFT)

canvas = Canvas(
    window, width = 500,height = 500
    )
canvas.pack()
img = ImageTk.PhotoImage(Image.open("D:/питон/oblaco.png"))
canvas.create_image(
    10,
    10,
    anchor=NW,
    image=img
    )

panel = Label(window, image = img)
panel.pack(side = "bottom", fill = "both", expand = "yes")
window.mainloop()


